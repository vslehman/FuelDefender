<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripCalculator" >
    
	<fragment
	    android:id="@+id/map"
	    android:name="com.google.android.gms.maps.SupportMapFragment"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    tools:context=".TripCalculator"/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="406dp"
	    android:orientation="vertical" >

		<TableRow
		    android:id="@+id/tableRow1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

			<TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Fuel Defender"
			    android:textAppearance="?android:attr/textAppearanceLarge" />

		</TableRow>

		<TableRow
		    android:id="@+id/tableRow2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

			<TextView
			    android:id="@+id/driveTimeLabel"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Drive time:  "
			    android:textAppearance="?android:attr/textAppearanceLarge" />

			<TextView
			    android:id="@+id/driveTimeValue"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Large Text"
			    android:textAppearance="?android:attr/textAppearanceLarge" />

		</TableRow>

		<TableRow
		    android:id="@+id/tableRow3"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

			<TextView
			    android:id="@+id/walkTimeLabel"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Walk time:  "
			    android:textAppearance="?android:attr/textAppearanceLarge" />

			<TextView
			    android:id="@+id/walkTimeValue"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Large Text"
			    android:textAppearance="?android:attr/textAppearanceLarge" />

		</TableRow>

	</LinearLayout>

</FrameLayout>
