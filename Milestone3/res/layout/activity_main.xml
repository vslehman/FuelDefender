<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripCalculator" >
    
	<fragment
	    android:id="@+id/map"
	    android:name="com.google.android.gms.maps.SupportMapFragment"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    tools:context=".TripCalculator"/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="406dp"
	    android:orientation="vertical" >

	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	    </TableRow>

	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginTop="8dp" >

	        <TextView
	            android:id="@+id/driveTimeLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/drive_time_label"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <TextView
	            android:id="@+id/driveTimeValue"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/null_value"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	    </TableRow>

	    <TableRow
	        android:id="@+id/tableRow3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp" >

	        <TextView
	            android:id="@+id/walkTimeLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/walk_time_label"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <TextView
	            android:id="@+id/walkTimeValue"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/null_value"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	    </TableRow>

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="393dp" >

	        <!--<Button
	            android:id="@+id/switch_to_record_trip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:layout_marginBottom="47dp"
	            android:text="Record Trip" />-->
			
			<Button
	            android:id="@+id/return_to_main"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:layout_marginBottom="47dp"
	            android:text="@string/return_to_trips" />
	    </RelativeLayout>

	</LinearLayout>

</FrameLayout>
